.bottomNav {
  background: #75b9ff;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 104rpx;
  color: #fff;
  line-height: 104rpx;
}

.answer {
  background: #b3d8ff;
  font-size: 35rpx;
  width: 250rpx;
  height: 104rpx;
  line-height: 104rpx;
  text-align: center;
  display: inline-block;
}

.star, .share {
  width: 250rpx;
  height: 104rpx;
  text-align: center;
  line-height: 104rpx;
  display: inline-block;
}

.star image {
  width: 46rpx;
  height: 44rpx;
}

.share image {
  width: 50rpx;
  height: 48rpx;
}
