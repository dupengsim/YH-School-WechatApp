@import "../../index/questionRecommend-template/questionRecommend-template.wxss";
.questionTop {
  display: flex;
  background: #fff;
  align-items: center;
  border-bottom: 1rpx solid #edf2f6;
  padding: 20rpx 0 20rpx 40rpx;
}

.myAvatar {
  width: 65rpx;
  height: 64rpx;
  margin-right: 15rpx;
}

.myName {
  font-size: 25rpx;
  color: #666;
}

.like, .fans {
  display: flex;
  margin-left: 20rpx;
}

.like_num, .fans_num {
  font-size: 16rpx;
  color: #75b9ff;
}

.like_icon, .fans_icon {
  width: 19rpx;
  height: 19rpx;
  margin-left: 10rpx;
}

.subNav {
  background: #fff;
  height: 72rpx;
  line-height: 72rpx;
}

.sub_navbarHd {
  font-size: 26rpx;
  height: 72rpx;
  line-height: 72rpx;
  position: relative;
  box-shadow: 0px 15rpx 29rpx rgba(143, 211, 255, 0.25);
}

.sub_navbarHd view {
  margin-left: 50rpx;
  display: inline-block;
  width: 130rpx;
  text-align: center;
}

.subnav_line {
  position: absolute;
  left: 0rpx;
  width: 103rpx;
  border-bottom: 5rpx solid #28aeeb;
  top: 68rpx;
}

.subQuestionNum, .subAnswernNum,.subFansnNum,.subCollectNum {
  font-size: 22rpx;
  color: #999;
  text-indent: 58rpx;
  padding-top: 10rpx;
}

.questionList, .subAnswerList,.subFansList,.subCollectList {
  box-shadow: 0 -10rpx 29rpx rgba(143, 211, 255, 0.25);
}

.subQuestionItem, .subAnswerItem,.subFansItem {
  width: 666rpx;
  margin: 10rpx auto 0;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #edf2f6;
}
.subCollectList{
  margin-top:10rpx;
}

.item_Title {
  font-size: 28rpx;
  color: #53bbea;
  width: 666rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.item_intro {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 20rpx;
  color: #999;
}
.noMore{
  font-size: 24rpx;
  color: #75B9FF;
  text-align: center;
  margin-top:100rpx;
}

.subItem_con {
  font-size: 22rpx;
  color: #666;
  line-height: 35rpx;
  width: 666rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  margin-bottom:8rpx;
}
.subFansItem{
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.FansHead{
  display: flex;
  align-items: center;
  font-size:22rpx;
  color: #666;
}
.FansHead image{
  width:56rpx;
  height:56rpx;
  margin-right:10rpx;
}
.fansKeep{
  font-size: 20rpx;
  color: #fff;
  background: #75B9FF;
  width:96rpx;
  height:40rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 5rpx;
  font-weight: bold;
}