/**index.wxss**/

swiper {
  width: 750rpx;
  height: 300rpx;
}

swiper image {
  width: 100%;
  height: 100%;
}

.index_title {
  line-height: 66rpx;
  height: 66rpx;
  width: 750rpx;
  font-size: 26rpx;
}

.index_title_name {
  float: left;
  margin-left: 36rpx;
  color: #28aeeb;
}

.index_title_more {
  float: right;
  margin-right: 36rpx;
  color: #999;
}

.to_more {
  width: 11rpx;
  height: 21rpx;
  margin-left: 11rpx;
}

.boxShadow {
  box-shadow: 0rpx 0rpx 29rpx rgba(143, 211, 255, 0.25);
}

.dynamic_box {
  width: 100%;
  padding: 10rpx 36rpx;
  font-size: 28rpx;
  color: #666;
}

.dynamic_list {
  line-height: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
}

.dynamic_type {
  font-weight: bold;
  color: #2e94fe;
  margin-right: 7rpx;
}

.dynamic_line {
  width: 6rpx;
  height: 24rpx;
  background: rgba(117, 185, 255, 1);
  display: inline-block;
  margin-right: 12rpx;
}

.dynamic_con {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  width: 600rpx;
}

.data_box{
  padding-left:36rpx;
  margin-top:15rpx;
}

.box_slide{
  height: 200rpx;
  white-space: nowrap;
  display: flex;
}

.data_item {
  width: 288rpx;
  height: 200rpx;
  border-radius: 15rpx;
  background: (255, 255, 255, 1);
  box-shadow: 0rpx 16rpx 27rpx rgba(143, 211, 255, 0.25);
  margin-right: 10rpx;
  display: inline-block;
}

.data_item_title {
  width: 288rpx;
  height: 70rpx;
  background: linear-gradient(to right, rgba(83,187,234,1),rgba(126,209,247,1), rgba(145,219,252,1));
  color: #fff;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  overflow: hidden;
  position: relative;
}

.data_item_type {
  font-size: 34rpx;
  margin-left: 21rpx;
  position: absolute;
  top: 14rpx;
}

.data_item_dir {
  font-size: 24rpx;
  position: absolute;
  left: 94rpx;
  top: 24rpx;
}

.data_item_icon {
  width: 39rpx;
  height: 39rpx;
  float: right;
  position: absolute;
  top: 10rpx;
  right: 16rpx;
}

.data_item_con {
  padding: 10rpx 15rpx;
  font-size: 24rpx;
  color: #333;
}

.item_con_text {
  font-weight: bold;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  width:258rpx;
  margin-bottom: 10rpx;
  white-space: normal;
}

.item_con_intro{
  color: #999;
  font-size:20rpx;
  display: flex;
  justify-content: space-between;
}

.item_con_pro{
  font-size:22rpx;
}
